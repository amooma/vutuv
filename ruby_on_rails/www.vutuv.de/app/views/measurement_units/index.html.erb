<p id="notice"><%= notice %></p>

<h1>Listing Measurement Units</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurement_units.each do |measurement_unit| %>
      <tr>
        <td><%= measurement_unit.name %></td>
        <td><%= link_to 'Show', measurement_unit %></td>
        <td><%= link_to 'Edit', edit_measurement_unit_path(measurement_unit) %></td>
        <td><%= link_to 'Destroy', measurement_unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

